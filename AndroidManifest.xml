<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.runintest2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />
    
    <original-package android:name="com.android.runintest2" />
    
    
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.android.runintest2.drawer.BaseActivity"/>
        <activity
            android:name="com.android.runintest2.RunInTestActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                android:value="com.android.runintest2.RunInTestFragment"/>
            <meta-data android:name="com.android.runintest2.targetAction"
                       android:value="com.android.runintest2.action.VibrateTestActivity"/>
        </activity>
        
        
        <!-- Test Items -->
        <activity android:name="com.android.runintest2.RunInTest$RebootTestActivity"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.android.runintest2.action.RunInTest" />
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                       android:value="com.android.runintest2.items.RebootTest"/>
            <meta-data android:name="com.android.runintest2.title"
                       android:value="@string/reboot_test_title"/>
            <meta-data android:name="com.android.runintest2.targetAction"
                       android:value="com.android.runintest2.action.VibrateTestActivity"/>
        </activity>

        <activity android:name="com.android.runintest2.RunInTest$VibrateTestActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.android.runintest2.action.VibrateTestActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
               <action android:name="com.android.runintest2.action.RunInTest" />    
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                android:value="com.android.runintest2.items.VibrateTest"/>
            <meta-data android:name="com.android.runintest2.title"
                     android:value="@string/vibrate_test_title"/>
            <meta-data android:name="com.android.runintest2.targetAction"
                       android:value="com.android.runintest2.action.LcdTestActivity"/>
        </activity>
        
        <activity android:name="com.android.runintest2.RunInTest$LcdTestActivity"
            android:launchMode="singleTop">
            <intent-filter>
               <action android:name="com.android.runintest2.action.RunInTest" />    
            </intent-filter>
            <intent-filter>
                <action android:name="com.android.runintest2.action.LcdTestActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                android:value="com.android.runintest2.items.LcdTest" />
            <meta-data android:name="com.android.runintest2.title"
                       android:value="@string/lcd_test_title"/>
        </activity>
        
        <activity android:name="com.android.runintest2.RunInTest$AudioTestActivity"
            android:launchMode="singleTop">
            <intent-filter>
               <action android:name="com.android.runintest2.action.RunInTest" />    
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                android:value="com.android.runintest2.items.LightSenorTest" />
            <meta-data android:name="com.android.runintest2.title"
                       android:value="@string/audio_test_title"/>
        </activity>
        
        <activity android:name="com.android.runintest2.RunInTest$VedioTestActivity"
            android:launchMode="singleTop">
            <intent-filter>
               <action android:name="com.android.runintest2.action.RunInTest" />    
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                android:value="com.android.runintest2.items.VedioTest" />
            <meta-data android:name="com.android.runintest2.title"
                       android:value="@string/vedio_test_title"/>
        </activity>
        
        <activity android:name="com.android.runintest2.RunInTest$LightSensorActivity"
            android:launchMode="singleTop">
            <intent-filter>
               <action android:name="com.android.runintest2.action.RunInTest" />    
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                android:value="com.android.runintest2.items.VibrateTest" />
            <meta-data android:name="com.android.runintest2.title"
                       android:value="@string/lightsenor_test_title"/>
        </activity>
        
        
        <!-- OnlyTest -->
        <activity android:name="com.android.runintest2.RunInTest$OnlyTestActivity1"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.android.action.onlytest" />
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                android:value="com.android.runintest2.onlytest.OnlyTest1"/>
        </activity>
        
        <activity android:name="com.android.runintest2.RunInTest$OnlyTestActivity2"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.android.action.onlytest" />
            </intent-filter>
            <meta-data android:name="com.android.runintest2.FRAGMENT_CLASS"
                android:value="com.android.runintest2.onlytest.OnlyTest2"/>
        </activity>
    </application>

</manifest>
